<wxs module="util" src="../util.wxs" />

<view class="container white" wx:if="{{allMissions.length === 0}}">
    <image class="background" src="Images/None.png" mode="aspectFit" />
    <view class="title">暂无任务</view>
    <view class="subtitle">好像什么任务也没有...</view>
</view>

<swiper wx:if="{{allMissions.length > 0}}" indicator-dots="true" autoplay="true" interval="2000" duration="500" style="height: 200px; width: 100%; background: white; ">
    <swiper-item>
        <image wx:if="{{!!userInfo.renwuUrl ==true}}" src="{{userInfo.renwuUrl}}" mode='widthFix' class="swiper-image" />
        <image wx:if="{{!!userInfo.renwuUrl ==false}}" src="https://leng-mypic.oss-cn-beijing.aliyuncs.com/mac-img/beijing.jpeg" class="swiper-image" />
    </swiper-item>

    <!-- <swiper-item><image src="Images/MissionCover02.jpg" mode='widthFix' class="swiper-image" /></swiper-item>
      <swiper-item><image src="Images/MissionCover03.jpg" mode='widthFix' class="swiper-image" /></swiper-item> -->
</swiper>

<view class="container" wx:if="{{allMissions.length > 0}}">
    <view class="form-group">
        <view class="search-bar">
            <icon class="search-icon" type="search" size="24"></icon>
            <input class="search-input" placeholder="搜索任务" bindinput="onSearch" value="{{search}}" />
        </view>
    </view>

    <view class="form-group_label">待审核
        <mp-badge content="{{tocheckMissions.length}}" style="margin-left: 5px;" />
    </view>
    <view class="form-group" wx:if="{{tocheckMissions.length > 0}}" style="z-index: 0; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.05), 0 6px 20px 0 rgba(0, 0, 0, 0.05);">
        <view class="form-cell" wx:for="{{tocheckMissions}}" wx:key="index">
            <mp-slideview buttons="{{slideButtons}}" data-index='{{index}}' icon="{{true}}" bindbuttontap="slideButtonTapcheck">
                <view class="slide" data-index="{{index}}" bindtap="toDetailPageCheck">
                    <view class="mission-info">
                        <view class="mission-info_title">{{util.filterStr(item.title, 10)}}</view>
                        <view class="mission-info_award">💰 {{util.filterStr(item.credit, 10)}} 积分</view>


                        <view class="mission-info_date" wx:if="{{userInfo.openID == item.openID && item.doPeople === 1}}">📅 {{util.cutStr(item.date, 10)}}
                            等待{{coupleInfo.nickName}}批准。
                        </view>
                        <view class="mission-info_date" wx:if="{{userInfo.openID == item.openID && item.doPeople === 0}}">📅 {{util.cutStr(item.date, 10)}}
                            等待{{coupleInfo.nickName}}接受任务。
                        </view>

                        <view class="mission-info_date" wx:if="{{userInfo.openID != item.openID && item.doPeople === 1}}">📅 {{util.cutStr(item.date, 10)}}
                            等待{{userInfo.nickName}}批准。
                        </view>
                        <view class="mission-info_date" wx:if="{{userInfo.openID != item.openID && item.doPeople === 0}}">📅 {{util.cutStr(item.date, 10)}}
                            等待{{userInfo.nickName}}接受任务。
                        </view>

                    </view>
                    <view class="mission-info_author">
                        <image style="position: absolute; width: 100%; bottom: 0;" wx:if="{{item.openID === userInfo.openID}}" mode="widthFix" src="Images/MissionA.png" />
                        <image style="position: absolute; width: 100%; bottom: 0;" wx:if="{{item.openID === coupleInfo.openID}}" mode="widthFix" src="Images/MissionB.png" />
                    </view>
                    <image wx:if="{{item.star == 'true'}}" class="star" src="Images/Star.png" />
                </view>

            </mp-slideview>
        </view>
    </view>



    <view class="form-group_label">未完成
        <mp-badge content="{{unfinishedMissions.length}}" style="margin-left: 5px;" />
    </view>
    <view class="form-group" wx:if="{{unfinishedMissions.length > 0}}" style="z-index: 0; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.05), 0 6px 20px 0 rgba(0, 0, 0, 0.05);">
        <view class="form-cell" wx:for="{{unfinishedMissions}}" wx:key="index">
            <mp-slideview buttons="{{slideButtons}}" data-index='{{index}}' icon="{{true}}" bindbuttontap="slideButtonTapUpper">
                <view class="slide" data-index="{{index}}" bindtap="toDetailPageUpper">
                    <view class="mission-info">
                        <view class="mission-info_title">{{util.filterStr(item.title, 10)}}</view>
                        <view class="mission-info_award">💰 {{util.filterStr(item.credit, 10)}} 积分</view>
                        <view class="mission-info_date" wx:if="{{userInfo.openID == item.openID && item.doPeople === 1}}">📅 {{util.cutStr(item.date, 10)}}
                            {{userInfo.nickName}}自己完成。
                        </view>
                        <view class="mission-info_date" wx:if="{{userInfo.openID == item.openID && item.doPeople === 0}}">📅 {{util.cutStr(item.date, 10)}}
                            安排给{{coupleInfo.nickName}}完成。
                        </view>

                        <view class="mission-info_date" wx:if="{{userInfo.openID != item.openID && item.doPeople === 1}}">📅 {{util.cutStr(item.date, 10)}}
                            {{coupleInfo.nickName}}自己完成。
                        </view>
                        <view class="mission-info_date" wx:if="{{userInfo.openID != item.openID && item.doPeople === 0}}">📅 {{util.cutStr(item.date, 10)}}
                            安排给{{userInfo.nickName}}完成。
                        </view>
                    </view>
                    <view class="mission-info_author">
                        <image style="position: absolute; width: 100%; bottom: 0;" wx:if="{{item.openID === userInfo.openID}}" mode="widthFix" src="Images/MissionA.png" />
                        <image style="position: absolute; width: 100%; bottom: 0;" wx:if="{{item.openID === coupleInfo.openID}}" mode="widthFix" src="Images/MissionB.png" />
                    </view>
                    <image wx:if="{{item.star=='true'}}" class="star" src="Images/Star.png" />
                </view>
            </mp-slideview>
        </view>
    </view>

    <view class="form-group_label">已完成
        <mp-badge content="{{finishedMissions.length}}" style="margin-left: 5px;" />
    </view>
    <view class="form-group" wx:if="{{finishedMissions.length > 0}}" style="z-index: 0; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.05), 0 6px 20px 0 rgba(0, 0, 0, 0.05);">
        <view class="form-cell" wx:for="{{finishedMissions}}" wx:key="index">
            <mp-slideview buttons="{{slideButtons}}" data-index='{{index}}' icon="{{true}}" bindbuttontap="slideButtonTapLower">
                <view class="slide" data-index="{{index}}" bindtap="toDetailPageLower">
                    <view class="mission-info">
                        <view class="mission-info_title">{{util.filterStr(item.title, 10)}}</view>
                        <view class="mission-info_award">💰 {{util.filterStr(item.credit, 10)}} 积分</view>
                        <!-- <view class="mission-info_date">📅 {{util.cutStr(item.date, 10)}} 创建</view> -->
                        <view class="mission-info_date" wx:if="{{userInfo.openID == item.openID && item.doPeople === 1}}">📅 {{util.cutStr(item.date, 10)}}
                            {{userInfo.nickName}}已完成。
                        </view>
                        <view class="mission-info_date" wx:if="{{userInfo.openID == item.openID && item.doPeople === 0}}">📅 {{util.cutStr(item.date, 10)}}
                            {{coupleInfo.nickName}}已完成。
                        </view>

                        <view class="mission-info_date" wx:if="{{userInfo.openID != item.openID && item.doPeople === 1}}">📅 {{util.cutStr(item.date, 10)}}
                            {{coupleInfo.nickName}}已完成。
                        </view>
                        <view class="mission-info_date" wx:if="{{userInfo.openID != item.openID && item.doPeople === 0}}">📅 {{util.cutStr(item.date, 10)}}
                            {{userInfo.nickName}}已完成。
                        </view>

                    </view>
                    <view class="mission-info_author">
                        <image style="position: absolute; width:100%; bottom: 0;" wx:if="{{item.openID === userInfo.openID}}" mode="widthFix" src="Images/MissionA.png" />
                        <image style="position: absolute; width:100%; bottom: 0;" wx:if="{{item.openID === coupleInfo.openID}}" mode="widthFix" src="Images/MissionB.png" />
                    </view>
                    <image wx:if="{{item.star=='true'}}" class="star" src="Images/Star.png" />
                </view>
            </mp-slideview>
        </view>
    </view>
</view>

<movable-area style="pointer-events: none; position: fixed; width: 100%; height: 100%;">
    <movable-view style="pointer-events: auto; width: 20%; height: 20%;" x="{{screenWidth}}" y="{{screenHeight}}" direction="all">
        <button class="btn-normal" hover-class="btn-hover" size="mini" bindtap="toAddPage" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
            <image style="margin-top: 10px; height: 100%; width: 100%;" mode="widthFix" src="Images/Plus.png" />任务
        </button>
    </movable-view>
</movable-area>