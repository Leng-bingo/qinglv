<wxs module="util" src="../util.wxs" />
<view class="container white" style="animation-name: animation-blur; animation-duration: 0.5s;">
  <image src="../../images/Mission.gif" mode='widthFix' />
  <view class="form-group" style="z-index: 0; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.05), 0 6px 20px 0 rgba(0, 0, 0, 0.05); ">


    <view class="form-cell">
      <view class="form-cell_title">📝 BUG及建议（qq群:126772828）</view>
      <textarea class="form-cell_input" placeholder="请写出BUG或使用建议以及更新意见" placeholder-class="form-cell_placeholder" bindinput="onDescInput" value="{{desc}}" />
    </view>
    <view class="form-cell">
      <view class="form-cell_title">📧 联系方式</view>
      <input class="form-cell_input" placeholder="请留下邮箱或手机号，以便后续联系！" placeholder-class="form-cell_placeholder" bindinput="onCreditInput" value="{{phone}}" />
    </view>
  </view>

  <view class="footer">
    <view class="reset" bindtap="resetMission">重置</view>
    <!-- <view class="save" bindtap="saveMission">保存</view> -->
    <view class="save" bindtap="node_saveMission">保存</view>
  </view>
</view>